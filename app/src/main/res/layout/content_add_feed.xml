<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddFeedActivity"
    tools:showIn="@layout/activity_add_feed">


    <EditText
        android:id="@+id/addFeedNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="@string/add_rss_feed_name_hint"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addFeedEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="193dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="@string/add_rss_feed_address_hint"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/addFeedButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addFeedButton"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:layout_below="@+id/addFeedEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="186dp"
        android:background="@color/colorAccent"
        android:text="Save"
        android:textColor="@color/lightTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/addFeedEditText"
        app:layout_constraintTop_toBottomOf="@+id/addFeedEditText" />


</android.support.constraint.ConstraintLayout>